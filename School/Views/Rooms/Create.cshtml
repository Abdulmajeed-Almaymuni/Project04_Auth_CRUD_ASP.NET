@model Room

@{
    ViewData["title"] = "Create Room";
}


<div class="bg-light text-center rounded rounded-3 m-auto p-5 col-4">
    <h2>Create Room</h2>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="RoomSize" class="control-label"></label>
            <input asp-for="RoomSize" class="form-control" />
            <span asp-validation-for="RoomSize" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button class="btn btn-success my" type="submit">Add Room</button>
        </div>
    </form>


    <div>
        <a class="btn btn-primary" asp-action="Index">Back to List</a>
    </div>
</div>
