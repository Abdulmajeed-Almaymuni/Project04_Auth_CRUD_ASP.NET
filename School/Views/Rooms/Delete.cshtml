@model Room

@{
    ViewData["Title"] = "Delete Room";
    int roomId = ViewBag.RoomId;
}

<h2>Delete Room</h2>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Delete" asp-route-id="@roomId">
            <div class="form-group">
                <label asp-for="RoomSize" class="control-label"></label>
                @Html.DisplayFor(model => model.RoomSize)
            </div>
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>